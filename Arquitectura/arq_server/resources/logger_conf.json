{
  "properties": {
    "base.path": "/Users/rafaelgomezbermejo/Trazabilidad/pythonScripts",
    "base.path.logs": "logs"
  },
  "logging_conf": {
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "simple": {
        "format": "[%(asctime)s - %(name)s - %(levelname)s ] %(message)s"
      },
      "debugging": {
        "format": "[%(asctime)s - %(name)s - %(levelname)s - %(filename)s:%(lineno)s - %(threadName)s ] %(message)s"
      }
    },

    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "debugging",
        "stream": "ext://sys.stdout"
      },

      "arq_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "debugging",
        "filename": "{{base.path}}/{{base.path.logs}}/arq.log",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      },

      "app_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "debugging",
        "filename": "{{base.path}}/{{base.path.logs}}/apps.log",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      },

      "test_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "debugging",
        "filename": "{{base.path}}/{{base.path.logs}}/testing.log",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      },

      "error_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "ERROR",
        "formatter": "debugging",
        "filename": "{{base.path}}/{{base.path.logs}}/errors.log",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      }
    },

    "loggers": {
      "arquitecture": {
        "level": "DEBUG",
        "handlers": ["console", "arq_file_handler", "error_file_handler"],
        "propagate": false
      },
      "app": {
        "level": "DEBUG",
        "handlers": ["console", "app_file_handler", "error_file_handler"],
        "propagate": false
      },
      "testing": {
        "level": "DEBUG",
        "handlers": ["console", "test_file_handler"],
        "propagate": false
      }
    },

    "root": {
      "level": "INFO",
      "handlers": ["console", "arq_file_handler", "error_file_handler"]
    }
  }
}
