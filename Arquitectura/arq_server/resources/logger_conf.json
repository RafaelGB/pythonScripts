{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "simple": {
        "format": "[%(asctime)s - %(name)s - %(levelname)s ] %(message)s"
      },
      "debugging": {
        "format": "[%(asctime)s - %(name)s - %(levelname)s - %(filename)s:%(lineno)s - %(funcName)20s() ] %(message)s"
      }
    },
  
    "handlers": {
      "console": {
        "class": "logging.StreamHandler",
        "level": "INFO",
        "formatter": "simple",
        "stream": "ext://sys.stdout"
      },
  
      "arq_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "DEBUG",
        "formatter": "simple",
        "filename": "arq.log",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      },
  
      "error_file_handler": {
        "class": "logging.handlers.RotatingFileHandler",
        "level": "ERROR",
        "formatter": "debugging",
        "filename": "errors.log",
        "maxBytes": 10485760,
        "backupCount": 20,
        "encoding": "utf8"
      }
    },
  
    "loggers": {
      "arquitecture": {
        "level": "INFO",
        "handlers": ["console","arq_file_handler","error_file_handler"],
        "propagate": false
      }
    },
  
    "root": {
      "level": "INFO",
      "handlers": ["console", "arq_file_handler", "error_file_handler"]
    }
  }